{% extends 'base.html.twig' %}

{% block body %}
    <div>
        <ul>
            {% for dateTime in dateTimes %}
                <li>
                    <a href="{{ path('app_frame_index', {dateTime: dateTime}) }}" data-turbo-frame="example_frame">{{ dateTime }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>

    <a href="{{ path('app_home_static') }}" data-turbo-action="replace">Go to static page on replace history status</a>
    <br/>
    <a href="{{ path('app_home_static') }}" data-turbo-action="restore">Go to static page on restore</a>
    <br/>
    <br/>

    <div>
        <turbo-frame id="example_frame" loading="lazy" src="{{ path('app_frame_index', {dateTime: 'now'}) }}">
            loading...
        </turbo-frame>
    </div>

    <div>
        <span data-controller="hello"></span>
    </div>

    <div>
        <span data-controller="copy">
            <input type="text" placeholder="Write any text" data-copy-target="input" data-action="input->copy#onInput"/><br>
            <span data-copy-target="output"></span>
        </span>
    </div>
{% endblock %}
